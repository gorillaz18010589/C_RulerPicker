<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conProgramDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="72dp"
        >

        <include
            layout="@layout/include_programs_details"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conRulerBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/conProgramDetail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="72dp"
        >

        <include
            layout="@layout/include_programs_five_type_ruler_view"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <FrameLayout
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toTopOf="@+id/conRulerBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        />

<!--        android:background="#F0F0F0"
-->


</androidx.constraintlayout.widget.ConstraintLayout>